<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<AutomationSequence documentVersion="1.0">
  <!-- Specify macros here -->
  <Macros>
    <Macro Name="wgmods_url" Value="https://wgmods.net/4354"/>
  </Macros>
  
  <!-- Specify the tasks to run -->
  <TaskDefinitions>
    <!-- download the source and the modpack current zip file-->
    <Task ID="download_mod_source" Command="download_browser" Url="{wgmods_url}" DestinationPath="{workDirectory}\{packageName}_source.zip" HtmlPath="{wgmods_xpath}" WaitTimeMs="500" WaitCounts="6"/>
    <Task ID="download_modpack" Command="package_download" FilePath="{workDirectory}\{packageName}_ftp.zip"/>

    <!-- extract the source and modpack wotmod files-->
    <Task ID="extract_source_wotmod" Filename="7z.exe" Command="shell_exec" Wd="{workDirectory}" Cmd="e Crosshairs_ArcadeSniper_Marksman_white_source.zip Marksman_white.wotmod"/>
    <Task ID="extract_modpack_wotmods" Filename="7z.exe" Command="shell_exec" Wd="{workDirectory}" Cmd="e {packageName}_ftp.zip crosshair_arcade.wotmod crosshair_sniper.wotmod"/>
  </TaskDefinitions>

</AutomationSequence>