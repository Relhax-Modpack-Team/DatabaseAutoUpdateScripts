<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<AutomationSequence documentVersion="1.0">
  <!-- Specify macros here -->
  <Macros>
    <Macro Name="wotmod_name" Value="wotinspector.com.battle_assistant."/>
  </Macros>

  <!-- Specify the tasks to run -->
  <TaskDefinitions>
    
    <!-- import tasks -->
    <Task ID="import_createWorkDirs" Command="import_task" RepoUrlPath="Task_templates/create_workDirs_macros.xml"/>
    
    <!-- import tasks -->
    <Task ID="import_getUrl" Command="import_task" RepoUrlPath="Task_templates/getDownloadUrl_THISindex0.xml"/>
    
    <!-- import tasks -->
    <Task ID="import_dlSource" Command="import_task" RepoUrlPath="Task_templates/downloadSourceBrowser_WGMods.xml"/>
    
    <!-- Create the wotmod names -->
    <Task ID="create_wotmod_source_macro" Command="macro_create" MacroName="wotmod_source" MacroValue="{last_download_filename}"/>
    
    
    
    
    <!-- import tasks -->
    <Task ID="import_dlModpack" Command="import_task" RepoUrlPath="Task_templates/downloadModpack_PackageNameZip.xml"/>
 
    <!-- 'e' means to extract (to the work direcotry, without using the zip file's paths), and -r means to recurse into the zip folder's directories -->
    <Task ID="extract_modpack" Command="shell_exec" Filename="7z.exe" Wd="{working_folder_modpack}" Cmd="x {packageName}.zip {wotmod_name}*.wotmod -r"/>
    <Task ID="extract_modpack2" Command="shell_exec" Filename="7z.exe" Wd="{working_folder_modpack}" Cmd="x {packageName}.zip mod_battle_assistant.txt -r"/>




    <!-- get the current version of the mod by string split and file search -->
    <Task ID="get_wotmod_filename" Command="directory_search" DirectoryPath="{working_folder_source}" SearchPattern="{wotmod_name}*.wotmod" Recursive="False" MacroPrefix="get_sourcewotmod_filename_results"/>
    <Task ID="get_mod_version_1" Command="macro_string_split_filename" MacroName="mod_version_1" Index="0" SplitCharacters="{wotmod_name}" FilePath="{get_sourcewotmod_filename_results_0}"/>
    <Task ID="get_mod_version_2" Command="macro_string_split_macro" MacroName="mod_version_2" Index="0" SplitCharacters="_" InputText="{mod_version_1}"/>

    
    <!-- get the modpack version of the mod by string split and file search -->
    <Task ID="get_wotmod_filename2" Command="directory_search" DirectoryPath="{working_folder_modpack}\mods\versiondir\" SearchPattern="{wotmod_name}*" Recursive="False" MacroPrefix="get_modpackwotmod_filename_results"/>
    <Task ID="get_mod_version_3" Command="macro_string_split_filename" MacroName="mod_version_random" Index="2" SplitCharacters="_" FilePath="{get_modpackwotmod_filename_results_0}"/>
    
    <!-- Create the wotmod names -->
    <Task ID="create_wotmod_modpack_macro" Command="macro_create" MacroName="wotmod_modpack" MacroValue="{wotmod_name}{version}_{mod_version_random}"/>




    <Task ID="compare_start" Command="compare_start"/>
    <!-- Compare wotmod and config file -->
    <Task ID="compare_wotmod" Command="file_compare"
      FileA="{working_folder_source}\{wotmod_source}"
      FileB="{working_folder_modpack}\mods\versiondir\{wotmod_modpack}"/>
    <Task ID="compare_end" Command="compare_end"/>

    <!-- if the comparison is good, meaning there is an update, then we want to copy the source into a new 'final' folder and upload -->
    <Task ID="create_source_dir_post_compare" Command="create_directory" DirectoryPath="{workDirectory}\package\mods\versiondir"/>
    <Task ID="move_source_post_compare" Command="file_copy" SourceFilePath="{working_folder_source}\{wotmod_source}" DestinationFilePath="{workDirectory}\package\mods\versiondir\{wotmod_source}"/>
    <!-- copy cfg file from source -->
    <Task ID="move_cfg" Command="file_copy" SourceFilePath="{working_folder_modpack}\mods\configs\battle_assistant\mod_battle_assistant.txt" DestinationFilePath="{working_folder_package}\mods\configs\battle_assistant\mod_battle_assistant.txt"/>

    <!-- create the new zip -->
    <Task ID="create_zip" Command="shell_exec" Filename="7z.exe" Wd="{workDirectory}\package" Cmd="{7z_createFinalZip}"/>
    
<!-- update version field in database - [LogicalDependency_XVM_Main_Nightly] and [XVMconfigBuilder_BuildSelector_Nightly] -->
    <Task ID="update_package_version" Command="update_package_property" PropertyName="Version" PropertyValue="{mod_version_2}" TargetPackageUID="jm0usfegzl8mic1e" />

    <!-- upload to the server -->
    <Task ID="upload_zip" Command="package_upload" FilePath="{workDirectory}\package\final.zip" ZipFileName="{packageName}_v{mod_version_2}_{clientVersion}_{date}.zip"/>
  
  
  
  </TaskDefinitions>

</AutomationSequence>