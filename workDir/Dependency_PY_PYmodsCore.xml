<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<AutomationSequence documentVersion="1.0">
  <!-- Specify macros here -->
  <Macros>
    <Macro Name="wotmod_name" Value="PYmodsCore"/>    
    <Macro Name="download_url" Value="https://disk.yandex.com/d/b-fqQA923Mqvwk"/>
  </Macros>
  <TaskDefinitions>
  
    <!-- create work dirs and macros -->
    <Task ID="import_createWD" Command="import_task" RepoUrlPath="Task_templates/create_workDirs_macros.xml"/>    
      
     <!-- download the source zip file, which implicitly creates the directories  -->
    <Task ID="download_mod_source" Command="download_browser" Url="{download_url}" DestinationPath="{working_folder_source}\{last_download_filename}" HtmlPath="{yadisk_xpath}"  WaitTimeMs="500" WaitCounts="6" BrowserHeight="0" BrowserWidth="0"/>
    <!-- extract the source wotmod files-->
    <Task ID="extract_source_1" Command="shell_exec" Filename="7z.exe" Wd="{working_folder_source}" Cmd="x {last_download_filename} {wotmod_name}.wotmod -r"/>
  


  </TaskDefinitions>
</AutomationSequence>