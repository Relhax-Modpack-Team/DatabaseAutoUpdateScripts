<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<AutomationSequence documentVersion="1.0">
  <!-- Specify macros here -->
  <Macros>
  </Macros>
  <TaskDefinitions>
  
    <!-- create work dirs and macros -->
    <Task ID="import_createWD" Command="import_task" RepoUrlPath="Task_templates/create_workDirs_macros.xml"/>
    
    <!-- get dl-url -->
    <Task ID="import_getDLUrl" Command="import_task" RepoUrlPath="Task_templates/getDownloadUrl_THISindex0.xml"/>

    <!-- download the source zip file, which *could* implicitly creates the directories, if we didn't define them first -->
    <Task ID="import_downloadSource" Command="import_task" RepoUrlPath="Task_templates/downloadSourceBrowser_WGMods.xml"/>
    
    <!-- download current modpack zip file -->
    <Task ID="import_downloadModpack" Command="import_task" RepoUrlPath="Task_templates/downloadModpack_PackageNameZip.xml"/>

    <!-- extract source -->
    <Task ID="extract_source" Command="shell_exec" Filename="7z.exe" Wd="{working_folder_source}" Cmd="x {last_download_filename} elevation.xc -r"/>
    
    <!-- extract modpack -->
    <Task ID="extract_modpack" Command="shell_exec" Filename="7z.exe" Wd="{working_folder_modpack}" Cmd="x {packageName}.zip elevation.xc -r"/>
    
    
    <Task ID="compare_start" Command="compare_start"/>
    <!-- Compare xc file -->
    <Task ID="compare_xc" Command="file_compare"
      FileA="{working_folder_source}\REBIRTH_\Game Files\World_of_Tanks\res_mods\configs\xvm\REBIRTH\elevation.xc"
      FileB="{working_folder_modpack}\res_mods\configs\xvm\xvmConfigFolderName\elevation.xc"/>
    <Task ID="compare_end" Command="compare_end"/>


    <!-- Update modpack files -->
    <Task ID="update_modpack" Command="file_copy" SourceFilePath="{working_folder_source}\REBIRTH_\Game Files\World_of_Tanks\res_mods\configs\xvm\REBIRTH\elevation.xc" DestinationFilePath="{working_folder_package}\res_mods\configs\xvm\xvmConfigFolderName\elevation.xc"/>


    <!-- create the new zip -->
    <Task ID="create_zip" Command="shell_exec" Filename="7z.exe" Wd="{workDirectory}\package" Cmd="{7z_createFinalZip}"/>
    
    <!-- upload to the server -->
    <Task ID="upload_zip" Command="package_upload" FilePath="{workDirectory}\package\final.zip" ZipFileName="{packageName}_{clientVersion}_{date}.zip"/>

  </TaskDefinitions>
</AutomationSequence>